<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
  android:layout_height="170dp"
  android:minHeight="170dp"
 android:paddingStart="@dimen/activity_margin"
   android:orientation="vertical"
    android:paddingLeft="@dimen/activity_margin">

    <TextView
    android:id="@+id/name"
    android:layout_width="match_parent"
    android:layout_height="33dp"
    android:paddingStart="@dimen/list_view_margin"
    android:gravity="bottom"
    android:textAppearance="?android:textAppearanceLarge"
    android:textColor="@android:color/holo_blue_dark"
    android:textStyle="bold"
        android:paddingLeft="@dimen/list_view_margin" />

    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/unit_price_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/list_view_margin"
                android:paddingLeft="@dimen/list_view_margin"
                android:text="@string/unit_price_label"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorListViewLabels"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/stock_level_label"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/list_view_margin"
                android:paddingLeft="@dimen/list_view_margin"
                android:text="@string/stock_level_label"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorListViewLabels"
                android:textSize="24sp" />

            <!--<EditText-->
                <!--android:id="@+id/pro_quantity"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:ems="10"-->
                <!--android:inputType="number"-->
                <!--android:hint="Quantity for sell ??"-->
                <!--android:textColorHint="@color/md_purple_500"-->
                <!--android:textColor="@color/md_green_600"-->
                <!--android:textSize="16sp" />-->

            <ImageView
                android:id="@+id/sell_button"
                android:layout_width="100dp"
                android:layout_height="33dp"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/transaction_button_margin"
                android:focusable="false"
                android:src="@drawable/img_sell_now" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            tools:ignore="ExtraText">

            <TextView
                android:id="@+id/unit_price_value"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:gravity="center_vertical"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black" />


            <TextView
                android:id="@+id/stock_level_value"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:gravity="center_vertical"
                android:textAppearance="?android:textAppearanceMedium" />
            <!--<EditText-->
                <!--android:id="@+id/total_price"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="33dp"-->
                <!--android:gravity="center_vertical"-->
                <!--android:textAppearance="?android:textAppearanceMedium" />-->

            <ImageView
                android:id="@+id/imageViewStatus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginStart="100dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/ic_success" />



        </LinearLayout>

    </LinearLayout>

</LinearLayout>