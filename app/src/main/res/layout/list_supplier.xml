<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:minHeight="@dimen/list_item_height"
    android:paddingStart="@dimen/activity_margin"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:orientation="vertical"
        android:paddingStart="80dp"
        android:paddingLeft="90dp">

        <TextView
            android:id="@+id/supp_name_value"
            android:layout_width="244dp"
            android:layout_height="33dp"
            android:gravity="bottom"

            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="121dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/supp_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/list_view_margin"
                android:paddingLeft="@dimen/list_view_margin"
                android:text="Phone"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/md_amber_800"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/supp_email"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/list_view_margin"
                android:paddingLeft="@dimen/list_view_margin"
                android:text="Email"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/md_amber_700"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/supp_city"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/list_view_margin"
                android:paddingLeft="@dimen/list_view_margin"
                android:text="City"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/md_amber_600"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/supp_phone_value"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:gravity="center_vertical"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/supp_email_value"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:gravity="center_vertical"
                android:textAppearance="?android:textAppearanceMedium" />
            <TextView
                android:id="@+id/supp_city_value"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:gravity="center_vertical"
                android:textAppearance="?android:textAppearanceMedium" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>