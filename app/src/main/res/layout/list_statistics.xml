<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="170dp"
    android:orientation="vertical"
    android:paddingStart="@dimen/activity_margin"
    android:paddingLeft="@dimen/activity_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <!-- Label -->
        <TextView
            style="@style/CategoryStyle"
            android:text="@string/hint_product_name" />

        <!-- Input fields -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingStart="4dp"
            android:paddingLeft="4dp">

            <TextView
                android:id="@+id/sproduct_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/list_view_margin"
                android:paddingLeft="@dimen/list_view_margin"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/md_blue_A400"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <!-- Label -->
        <TextView
            style="@style/CategoryStyle"
            android:text="@string/hint_product_unit_price" />

        <!-- Input fields -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingStart="4dp"
            android:paddingLeft="4dp">

            <TextView
                android:id="@+id/sproduct_unit_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/list_view_margin"
                android:paddingLeft="@dimen/list_view_margin"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorPositiveStock"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <!-- Label -->
        <TextView
            style="@style/CategoryStyle"
            android:text="@string/hint_product_quantity" />

        <!-- Input fields -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingStart="4dp"
            android:paddingLeft="4dp">

            <TextView
                android:id="@+id/sproduct_qunitity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/list_view_margin"
                android:paddingLeft="@dimen/list_view_margin"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/jumbo"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <!-- Label -->
        <TextView
            style="@style/CategoryStyle"
            android:text="Sell Date      " />

        <!-- Input fields -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingStart="4dp"
            android:paddingLeft="4dp">

            <TextView
                android:id="@+id/sproduct_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/list_view_margin"
                android:paddingLeft="@dimen/list_view_margin"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/md_amber_900"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

