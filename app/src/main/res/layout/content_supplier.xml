<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SupplierActivity"
    tools:showIn="@layout/activity_supplier">

    <ListView
        android:id="@+id/supplier_list_view"
        android:layout_width="match_parent"
        android:layout_height="537dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/supplier_empty_view"
        app:layout_constraintVertical_bias="0.93" />
    <!-- Empty view for the list -->
    <RelativeLayout
        android:id="@+id/supplier_empty_view"
        android:layout_width="383dp"
        android:layout_height="500dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_list_view"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/empty_title_text"
            android:layout_width="168dp"
            android:layout_height="45dp"
            android:layout_above="@+id/empty_subtitle_text"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="228dp"
            android:layout_marginEnd="115dp"
            android:layout_marginRight="115dp"
            android:layout_marginBottom="11dp"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="16dp"
            android:text="Ther is no Supplier"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/empty_subtitle_text"
            android:layout_width="302dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginBottom="168dp"
            android:fontFamily="sans-serif"
            android:paddingTop="8dp"
            android:text="start by adding new Supplier"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#A2AAB0"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="139dp"
            android:layout_alignEnd="@+id/empty_subtitle_text"
            android:layout_alignRight="@+id/empty_subtitle_text"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="87dp"
            android:layout_marginLeft="87dp"
            android:layout_marginEnd="75dp"
            android:layout_marginRight="75dp"
            android:layout_marginBottom="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:src="@drawable/img_curved_red_arrow" />

    </RelativeLayout>




</android.support.constraint.ConstraintLayout>